{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "trailingComma": "es5",
  "plugins": ["prettier-plugin-ejs"],
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    { "files": "*.ejs", "options": { "parser": "html", "htmlWhitespaceSensitivity": "ignore" } }
  ]
}
